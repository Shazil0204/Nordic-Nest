@page
@model NordicNest.Pages.ForgotPasswordModel
@{
    Layout = null;
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tailwind</title>
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="flex justify-center items-center h-screen bg-cover bg-center" style="background-image: url('/Images/Logo1.png');">
    <!--This is the default forget password page-->
    <div class="flex justify-center items-center col-span-1">
        <div class="bg-white p-8 rounded-lg shadow-md w-full sm:w-96">
            <h2 class="text-2xl font-semibold mb-4">Forgot Password</h2>
            <p class="text-gray-600 mb-6">
                Enter your email address below and we'll send you a link to reset your
                password.
            </p>
            <form>
                <div class="mb-4">
                    <label for="username"
                           class="block text-sm font-medium text-gray-700">Username</label>
                    <input type="username"
                           id="username"
                           name="username"
                           class="mt-1 block w-full rounded-md shadow-sm bg-gray-200 min-h-8 px-2 border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
                    <input type="email"
                           id="email"
                           name="email"
                           class="mt-1 block w-full rounded-md shadow-sm bg-gray-200 min-h-8 px-2 border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" />
                </div>
                <div class="flex items-center justify-between">
                    <button type="submit"
                            class="bg-indigo-500 text-white px-4 py-2 rounded-md hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600">
                        Send Reset Link
                    </button>
                    <a asp-page="Login" class="text-sm text-indigo-500 hover:text-indigo-700">Back to Login</a>
                </div>
            </form>
        </div>
    </div>
</body>