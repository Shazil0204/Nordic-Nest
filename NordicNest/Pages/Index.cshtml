@{
	ViewData["Title"] = "Welcome to";
}

<div class="bg-blue-400 h-max">

	<div class="pt-20 lg:px-20 lg:pb-4">

		@* Main *@
		<div class="bg-white rounded-lg lg:flex justify-center items-center pb-2 lg:h-[70rem]">
			<div class="lg:order-last w-100 ">
				<img class="w-100 rounded-lg" src="/Images/img.png" />
			</div>
			<div class="lg:order-first w-100 text-center">
				<p class="font-mono text-2xl xl:text-4xl 2xl:text-6xl ">Welcome to <br /> <strong class="lg:[text-shadow:_0_3px_0_rgb(0_255_0_/_100%)] text-blue-600">Nordic Nest</strong></p>
				<p class="font-mono ">A Finance Management Website</p>
				<br />
				<p class="font-mono text-sm/[17px] md:text-lg px-2">A simple website that will help you manage your income a lot easier</p>
