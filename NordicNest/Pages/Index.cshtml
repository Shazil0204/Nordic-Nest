@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to";
}

@* i don't know myself why this works but tailwind classes does not *@
<style>
    body {
        background-image: url('/Images/financial.png') !important;
    }
</style>

<body>

    @* This is for my Slogan *@
    <section class="mt-20 text-center ">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            Track and Stack, Nordic Nest Has Your Back!
        </h1>
    </section>

    @* This is my main Image *@
    <section class="mt-3 ">
        <img class="h-auto w-100 rounded border-4 border-cyan-500 rounded" src="/Images/backend.png" />
    </section>

    @* A small detail about the features of this website *@
    <section class="text-center mt-3">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            Let's talk about some of the most <strong class="text-white">Amazing features</strong> of this website
        </h1>
    </section>
    @* 1. Financial Clarity *@
    <section class="text-center mt-3">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            1. Financial Clarity
        </h1>
        <div class="flex justify-center items-center text-center bg-white rounded">
            <img class="m-1 h-50 w-50 rounded border-4 border-cyan-500 rounded" src="/Images/Financial_Clarity.png" />
            <div class="w-full p-4">
                <div class="text-justify font-mono text-xs sm:text-sm lg:text-lg xl:text-xl">
                    <p>
                        Gain unparalleled insight into your financial health with our 'Financial Clarity' feature. Effortlessly track your income, expenses, and savings, 
                        all presented in an intuitive and easy-to-understand format. Make informed decisions and achieve your financial goals with clarity and confidence.
                    </p>
                </div>
            </div>
        </div>
    </section>

    @* 2. Simplified Savings *@
    <section class="text-center mt-3">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            2. Simplified Savings
        </h1>
        <div class="flex justify-center items-center text-center bg-white rounded">
            <div class="w-full p-4">
                <div class="text-justify font-mono text-xs sm:text-sm lg:text-lg xl:text-xl">
                    <p>
                        Our 'Simplified Savings' tool transforms the way you save. Set and manage your saving goals with ease, from emergency funds to dream vacations.
                        Watch your savings grow in our user-friendly interface, designed to simplify your financial journey and help you save smarter, not harder.
                    </p>
                </div>
            </div>
            <img class="m-1 h-50 w-50 rounded border-4 border-cyan-500 rounded" src="/Images/Simplified_Savings.png" />
        </div>
    </section>


    @* 3. Loan Lifecycle *@
    <section class="text-center mt-3">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            3. Loan Lifecycle
        </h1>
        <div class="flex justify-center items-center text-center bg-white rounded">
            <img class="m-1 h-50 w-50 rounded border-4 border-cyan-500 rounded" src="/Images/Loan_Lifecycle.png" />
            <div class="w-full p-4">
                <div class="text-justify font-mono text-xs sm:text-sm lg:text-lg xl:text-xl">
                    <p>
                        Navigate the complexities of loans with ease using our 'Loan Lifecycle' management. From application to final payment, track and manage every stage of your loan.
                        Our intuitive system offers a clear view of your repayment schedule, ensuring you stay informed and in control throughout the loan process.
                    </p>
                </div>
            </div>
        </div>
    </section>

    @* 4. Subscription Insights *@
    <section class="text-center mt-3">
        <h1 class="font-mono text-md lg:text-4xl xl:text-6xl text-cyan-200 bg-opacity-20 p-4 rounded-lg backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] [text-shadow:_0_1px_0_rgb(18_255_255_/_70%)] border-4 border-cyan-500 rounded hover:bg-black hover:text-white transition duration-500">
            4. Subscription Insights
        </h1>
        <div class="flex justify-center items-center text-center bg-white rounded">
            <div class="w-full p-4">
                <p class="text-justify font-mono text-xs sm:text-sm lg:text-lg xl:text-xl">
                    Keep track of all your subscriptions in one place with 'Subscription Insights'. Our tool offers a clear overview of your monthly subscriptions,
                    from streaming services to gym memberships. Manage your subscriptions effectively, avoid unwanted fees, and ensure you're only paying for what you truly enjoy and need.
                </p>
            </div>
            <img class="m-1 h-50 w-50 rounded border-4 border-cyan-500 rounded" src="/Images/Subscription_Insights.png" />
        </div>
    </section>
</body>
