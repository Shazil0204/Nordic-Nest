@page
@model NordicNest.Pages.LoginModel
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Tailwind</title>
	<link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
</head>
<body class="flex justify-center items-center h-screen bg-cover bg-center" style="background-image: url('/Images/Logo1.png');">
	<div class="relative w-100 max-w-md transition duration-500 ease-in-out transform hover:-translate-y-1 hover:scale-110">
		<div class="absolute inset-0 bg-transparent backdrop-filter backdrop-blur-md border border-white border-opacity-50 rounded-lg"></div>
		<div class="relative px-8 py-10">
			@if (Model.TempData["LoginReturnData"] != null && (int)Model.TempData["LoginReturnData"] == 0)
			{
				<form method="post">
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Login</h2>
					<div class="mb-4">
						<input type="text" name="username" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Username">
					</div>
					<div class="mb-6">
						<input type="password" name="password" required class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Password">
					</div>
					<div class="flex justify-center items-center  mb-6">
						<a href="#" class="font-bold rounded backdrop-blur-xl drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,0.9)] text-white transition duration-700 hover:text-green-500"><abbr title="Tension not. It is really easy to change your password">Forgot my password</abbr></a>
					</div>
					<button type="submit" class="w-full bg-blue-500 hover:bg-green-700 transition duration-700 text-white font-bold py-2 px-4 rounded-lg">Log in</button>
					<div class="text-center mt-4">
						<p class="font-bold text-white">
							Don't have an account?
							<a asp-page="Register" class="text-white transition duration-700 hover:text-green-500">Register</a>
						</p>
					</div>
					<div class="flex justify-center items-center  mt-6">
						<button onclick="goBack()" class="w-full hover:text-black bg-blue-500 transition duration-700 text-white font-bold py-2 px-4 rounded-lg">Back</button>
					</div>
				</form>
			}
			else if (Model.TempData["LoginReturnData"] != null && (int)Model.TempData["LoginReturnData"] == -2)
			{
				<form method="post" asp-page-handler="retry">
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Your username was wrong</h2>
					<button type="submit" class="w-full bg-blue-500 hover:bg-green-700 transition duration-700 text-white font-bold py-2 px-4 rounded-lg animate-bounce">Try again</button>
					<div class="text-center mt-4">
						<p class="font-bold text-white">
							Don't have an account?
							<a asp-page="Register" class="text-white transition duration-700 hover:text-green-500">Register</a>
						</p>
					</div>
				</form>
			}
			else if (Model.TempData["LoginReturnData"] != null && (int)Model.TempData["LoginReturnData"] == -99)
			{
				<form method="post" asp-page-handler="retry">
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Something went wrong in database</h2>
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Please try again</h2>
					<button type="submit" class="w-full bg-blue-500 hover:bg-green-700 transition duration-700 text-white font-bold py-2 px-4 rounded-lg animate-bounce">Try again</button>
					<div class="text-center mt-4">
						<p class="font-bold text-white">
							Don't have an account?
							<a asp-page="Register" class="text-white transition duration-700 hover:text-green-500">Register</a>
						</p>
					</div>
				</form>
			}
			else
			{
				<form method="post" asp-page-handler="retry">
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Something went wrong in System</h2>
					<h2 class="text-2xl flex items-center justify-center w-auto font-bold mb-6 transition duration-200 hover:text-white">Please try again</h2>
					<button type="submit" class="w-full bg-blue-500 hover:bg-green-700 transition duration-700 text-white font-bold py-2 px-4 rounded-lg animate-bounce">Try again</button>
					<div class="text-center mt-4">
						<p class="font-bold text-white">
							Don't have an account?
							<a asp-page="Register" class="text-white transition duration-700 hover:text-green-500">Register</a>
						</p>
					</div>
				</form>
			}
		</div>
	</div>
	<script src="~/js/GoBack.js" asp-append-version="true"></script>
</body>
</html>